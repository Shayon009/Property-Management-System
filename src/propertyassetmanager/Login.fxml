<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="propertyassetmanager.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Property Asset Manager" />
    
    <TextField fx:id="usernameField" maxWidth="300" promptText="Username" />
    <PasswordField fx:id="passwordField" maxWidth="300" promptText="Password" />
    
    <VBox alignment="CENTER" spacing="10">
        <Button maxWidth="300" onAction="#handleLogin" style="-fx-background-color: #493a94; -fx-text-fill: white;" text="Login" />
        <Button maxWidth="300" onAction="#switchToSignup" style="-fx-background-color: #9178bf; -fx-text-fill: white;" text="Create Account" />
    </VBox>
    
    <Label fx:id="messageLabel" maxWidth="300" wrapText="true" />
</VBox>
