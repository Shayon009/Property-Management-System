<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="propertyassetmanager.SignupController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text fill="#8a6868" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Create New Account" />
    
    <TextField fx:id="fullNameField" maxWidth="300" promptText="Full Name" />
    <TextField fx:id="usernameField" maxWidth="300" promptText="Username" />
    <PasswordField fx:id="passwordField" maxWidth="300" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" maxWidth="300" promptText="Confirm Password" />
    
    <ComboBox fx:id="roleComboBox" maxWidth="300" promptText="Select Role" />
    
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleSignup" style="-fx-background-color: #004225; -fx-text-fill: white;" text="Sign Up" />
        <Button onAction="#switchToLogin" style="-fx-background-color: #757575; -fx-text-fill: white;" text="Back to Login" />
    </HBox>
    
    <Label fx:id="messageLabel" maxWidth="300" wrapText="true" />
</VBox>
